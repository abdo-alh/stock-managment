{% extends "admin/adminbase.html.twig" %}

{% block title %}{% endblock %}

{% block body %}
	<div class="row mt">
		<div class="col-md-12">
			<div class="content-panel">
				<table class="table table-striped table-advance table-hover">
					<a class="btn btn-primary pull-right" href="{{ path('supplier_add') }}">اضافة بائع الجملة جديد</a>
					<h4>
						<i class="fa fa-angle-right"></i>
						Suppliers List - لائحة بائعي الجملة</h4>
					<hr>
					<thead>
						<tr>
							<th>
								<i class="fa fa-bullhorn"></i>
								ID - الرقم</th>
							<th>
								<i class="fa fa-bullhorn"></i>
								Name - الإسم</th>
                            <th>
								<i class="fa fa-bullhorn"></i>
								Phone - الهاتف</th>
							<th>
								<i class="fa fa-bookmark"></i>
								City - المدينة</th>
							<th>
								<i class=" fa fa-edit"></i>
								Status</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						{% for supplier in pagination %}
							<tr>
								<td>{{ loop.index }}</td>
								<td>{{ supplier.name }}</td>
								<td>{{ supplier.phone }}
								</td>
								<td>{{ supplier.city.name }}
								</td>
								<td>
									<!--<a href="{{ path('supplier_show', {'id': supplier.id}) }}" class="btn btn-success btn-xs">
										<i class="fa fa-check"></i>
									</a>-->
									<a href="{{ path('supplier_edit', {'id': supplier.id}) }}" class="btn btn-primary btn-xs">
										<i class="fa fa-pencil"></i>
									</a>
									<a href="{{ path('supplier_delete', {'id': supplier.id}) }}" class="btn btn-danger btn-xs" onclick="return confirm('هل أنت متأكد أنك تريد حذف هذا البائع ؟');">
										<i class="fa fa-trash-o "></i>
									</a>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
				{# display navigation #}
				<div class="navigation">
					{{ knp_pagination_render(pagination) }}
				</div>
			</div>
			<!-- /content-panel -->
		</div>
		<!-- /col-md-12 -->
	</div>
	<!-- /row -->
{% endblock %}
