{% extends "admin/adminbase.html.twig" %}

{% block title %}{% endblock %}

{% block body %}
	<!-- FORM VALIDATION -->
	<div class="row mt">
		<div class="col-lg-12">
			<h4>
				<i class="fa fa-angle-right"></i>
				Add New Supplier - تعديل بائع الجملة</h4>
			<div class="form-panel">
				<div class=" form">
					{{ form_start(form,{ 'attr': {'class': 'cmxform form-horizontal style-form'} }) }}
					<div class="form-group ">
						<label for="cname" class="control-label col-lg-2">Name - الإسم</label>
						<div class="col-lg-4">
							{{ form_row(form.name,{ 'attr': {'class': 'form-control'} }) }}
						</div>
					</div>
					<div class="form-group ">
						<label for="cemail" class="control-label col-lg-2">Phone - الهاتف</label>
						<div class="col-lg-4">
							{{ form_row(form.phone,{ 'attr': {'class': 'form-control'} }) }}
						</div>
					</div>
					<div class="form-group ">
						<label for="curl" class="control-label col-lg-2">City - المدينة</label>
						<div class="col-lg-4">
							{{ form_row(form.city,{ 'attr': {'class': 'form-control'} }) }}
						</div>
					</div>
					<div class="form-group">
						<div class="col-lg-offset-2 col-lg-10">
							<button class="btn btn-theme" type="submit">حفظ</button>
							<a class="btn btn-theme04" href="{{ path('supplier') }}">العودة
							</a>
						</div>
					</div>
					{{ form_end(form) }}
				</div>
			</div>
			<!-- /form-panel -->
		</div>
		<!-- /col-lg-12 -->
	</div>
	<!-- /row -->
{% endblock %}
