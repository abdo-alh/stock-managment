{% extends "admin/adminbase.html.twig" %}

{% block title %}{% endblock %}

{% block body %}
	<div class="row mt">
		<div class="col-md-12">
			<div class="content-panel">
				<table class="table table-striped table-advance table-hover">
					<div class="col">
						<a class="btn btn-primary pull-right" href="{{ path('product_add') }}">اضافة منتج جديد</a>
						<h4>
							<i class="fa fa-angle-right"></i>
							Product List - لائحة المنتوجات</h4>
						<form method="post" action="{{ path('product_search') }}" class="centered">
							<input type="text" name="productName">
							<button type="submit" class="btn-success">
								<i class="fa fa-search"></i>
							</button>
						</form>
					</div>
					<hr>
					<thead>
						<tr>
							<th>
								<i class="fa fa-bullhorn"></i>
								Image - الصورة</th>
							<th>
								<i class="fa fa-bullhorn"></i>
								Name - الإسم</th>
							<th>
								<i class="fa fa-question-circle"></i>
								Buying Price - ثمن الشراء</th>
							<th>
								<i class="fa fa-bookmark"></i>
								Selling Price - ثمن البيع</th>
							<th>
								<i class="fa fa-bookmark"></i>
								Category - الصنف</th>
							<th>
								<i class="fa fa-bookmark"></i>
								Quantity - الكمية</th>
							<th>
								<i class=" fa fa-edit"></i>
								Status</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						{% for product in pagination %}
							<tr>
								<td>
									<img src="{{ asset('uploads/products/' ~ product.imageName) }}" alt="{ product.name }}" width="80">
								</td>
								<td class="hidden-phone">{{ product.name }}</td>
								<td>{{ product.buyingPrice|number_format(0,',') }}
									DH
								</td>
								<td>{{ product.sellingPrice|number_format(0,',') }}
									DH
								</td>
								<td>{{ product.category }}
								</td>
								<td>
									<span class="label label-info label-mini">{{ product.quantity }}</span>
								</td>
								<td>
									<!--<a href="{{ path('product_show', {'id': product.id}) }}" class="btn btn-success btn-xs">
																																					<i class="fa fa-check"></i>
																																				</a>-->
									<a href="{{ path('product_edit', {'id': product.id}) }}" class="btn btn-primary btn-xs">
										<i class="fa fa-pencil"></i>
									</a>
									<a href="{{ path('product_delete', {'id': product.id}) }}" class="btn btn-danger btn-xs" onclick="return confirm('هل أنت متأكد أنك تريد حذف هذا المنتج ؟');">
										<i class="fa fa-trash-o "></i>
									</a>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
				{# display navigation #}
				<div class="navigation">
					{{ knp_pagination_render(pagination) }}
				</div>
			</div>
			<!-- /content-panel -->
		</div>
		<!-- /col-md-12 -->
	</div>
	<!-- /row -->
{% endblock %}
