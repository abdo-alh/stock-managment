<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<meta name="description" content="">
		<meta name="author" content="Dashboard">
		<meta name="keyword" content="THIS IS AN ELECTRONICS SHOP FOR ALL ELECTRONICS ITEMS">
		<title>ELECTRO LARBI</title>

		<!-- Favicons -->
		<link href="{{ asset('img/favicon.png') }}" rel="icon">
		<link
		href="{{ asset('img/apple-touch-icon.png') }}" rel="apple-touch-icon">

		<!-- Bootstrap core CSS -->
		<link
		href="{{ asset('lib/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet">
		<!--external css-->
		<link href="{{ asset('lib/font-awesome/css/font-awesome.css') }}" rel="stylesheet"/>
		<link rel="stylesheet" type="text/css" href="{{ asset('css/zabuto_calendar.css') }}">
		<link
		rel="stylesheet" type="text/css" href="{{ asset('lib/gritter/css/jquery.gritter.css') }}"/>
		<!-- Custom styles for this template -->
		<link href="{{ asset('css/style.css') }}" rel="stylesheet">
		<link href="{{ asset('css/style-responsive.css') }}" rel="stylesheet">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		{# Run `composer require symfony/webpack-encore-bundle`
																		           and uncomment the following Encore helpers to start using Symfony UX #}
		{% block stylesheets %}
			{#{{ encore_entry_link_tags('app') }}#}
		{% endblock %}
	</head>
	<body>
		<section id="container">
			<!-- **********************************************************************************************************************************************************
																					        TOP BAR CONTENT & NOTIFICATIONS
																					        *********************************************************************************************************************************************************** -->
			<!--header start-->
				<header class="header black-bg"> <div class="sidebar-toggle-box">
					<div class="fa fa-bars tooltips" data-placement="right" data-original-title="Toggle Navigation"></div>
				</div>
				<!--logo start-->
				<a href="{{ path('admin') }}" class="logo">
					<b>ELECTRO<span>LARBI</span>
					</b>
				</a>
				<!--logo end-->
				<div class="top-menu">
					<ul class="nav pull-right top-menu">
						<li>
							<a class="logout" href="{{ path('app_logout') }}">الخروج</a>
						</li>
					</ul>
				</div>
			</header>
			<!--header end-->
			<!-- **********************************************************************************************************************************************************
																					        MAIN SIDEBAR MENU
																					        *********************************************************************************************************************************************************** -->
			<!--sidebar start-->
				<aside>
					<div
					id="sidebar" class="nav-collapse "> <!-- sidebar menu start-->
					<ul class="sidebar-menu" id="nav-accordion">
						<p class="centered">
							<a href="{{ path('profile') }}">
								{% if app.user.photo %}
									<img src="{{ asset('uploads/users/' ~ app.user.photo) }}" class="img-circle" width="80">
								{% else %}
									<img src="http://www.placehold.it/200x150/EFEFEF/AAAAAA&text=no+image" class="img-circle" width="80">
								{% endif %}
							</a>
						</p>
						{% if app.user %}
							<h5 class="centered">
								{{ app.user.username }}
							</h5>
						{% endif %}

						<li class="mt">
							<a {% if (app.request.pathInfo == path('admin')) %} class="active" {% endif %} href="{{ path('admin') }}">
								<i class="fa fa-dashboard"></i>
								<span>Dashboard - الرئيسية</span>
							</a>
						</li>
						<li class="sub-menu">
							<a {% if (app.request.pathInfo == path('product') or app.request.pathInfo == path('category_index')) %} class="active" {% endif %} href="javascript:;">
								<i class="fa fa-desktop"></i>
								<span>Products - المنتوجات</span>
							</a>
							<ul class="sub">
								<li>
									<a href="{{ path('product') }}">Product List - لائحة المنتوجات</a>
								</li>
								<li>
									<a href="{{ path('category_index') }}">Category List - الأصناف</a>
								</li>
							</ul>
						</li>
						<li class="sub-menu">
							<a {% if (app.request.pathInfo == path('purshase') or app.request.pathInfo == path('purshase_add')) %} class="active" {% endif %} href="javascript:;">
								<i class="fa fa-shopping-cart"></i>
								<span>Pushases - المشتريات</span>
							</a>
							<ul class="sub">
								<li>
									<a href="{{ path('purshase_add') }}">Add New - اضافة عملية شراء جديدة</a>
								</li>
								<li>
									<a href="{{ path('purshase') }}">Purshases List - لائحة المشتريات</a>
								</li>
							</ul>
						</li>
						<li class="sub-menu">
							<a {% if (app.request.pathInfo == path('invoice') or app.request.pathInfo == path('invoice_add')) %} class="active" {% endif %} href="javascript:;">
								<i class="fa fa-money"></i>
								<span>Sales - المبيعات</span>
							</a>
							<ul class="sub">
								<li>
									<a href="{{ path('invoice_add') }}">Add New Sale - اضافة عملية البيع جديدة</a>
								</li>
								<li>
									<a href="{{ path('invoice') }}">Sales List - لائحة المبيعات</a>
								</li>
							</ul>
						</li>
						<li class="sub-menu">
							<a {% if (app.request.pathInfo == path('supplier') or app.request.pathInfo == path('supplier_add')) %} class="active" {% endif %} href="javascript:;">
								<i class="fa fa-truck"></i>
								<span>Suppliers - بائعي الجملة</span>
							</a>
							<ul class="sub">
								<li>
									<a href="{{ path('supplier_add') }}">Add New - اضافة بائع الجملة جديد</a>
								</li>
								<li>
									<a href="{{ path('supplier') }}">Supplier List - لائحة بائعي الجملة</a>
								</li>
							</ul>
						</li>
						<li class="sub-menu">
							<a {% if (app.request.pathInfo == path('statistics')) %} class="active" {% endif %} href="javascript:;">
								<i class=" fa fa-bar-chart-o"></i>
								<span>Charts - إحصائيات</span>
							</a>
							<ul class="sub">
								<li>
									<a href="{{ path('statistics') }}">المداخيل و المصاريف</a>
								</li>
							</ul>
						</li>
					</ul>
					<!-- sidebar menu end-->
				</div>
			</aside>
			<!--sidebar end-->
			<!--main content start-->
			<section id="main-content">
				<section class="wrapper"> {% block body %}{% endblock %}

					<!--main content end-->
					<!--footer start-->
					<footer class="site-footer">
						<div class="text-center">
							<p>
								&copy; Copyrights
								<strong>Abderrahim</strong>. All Rights Reserved
							</p>
							<a href="index.html#" class="go-top">
								<i class="fa fa-angle-up"></i>
							</a>
						</div>
					</footer>
					<!--footer end-->
				</section>
			</section>

			{% block javascripts %}
				<!-- js placed at the end of the document so the pages load faster -->
				<script src="{{ asset('lib/jquery/jquery.min.js') }}"></script>
				<script src="{{ asset('lib/bootstrap/js/bootstrap.min.js') }}"></script>
				<script class="include" type="text/javascript" src="{{ asset('lib/jquery.dcjqaccordion.2.7.js') }}"></script>
				<script src="{{ asset('lib/jquery.scrollTo.min.js') }}"></script>
				<script src="{{ asset('lib/jquery.nicescroll.js') }}" type="text/javascript"></script>
				<script src="{{ asset('lib/jquery.sparkline.js') }}"></script>
				<!--common script for all pages-->
				<script src="{{ asset('lib/common-scripts.js') }}"></script>
				<script type="text/javascript" src="{{ asset('lib/gritter/js/jquery.gritter.js') }}"></script>
				<script type="text/javascript" src="{{ asset('lib/gritter-conf.js') }}"></script>
				<!--script for this page-->
				<script src="{{ asset('lib/sparkline-chart.js') }}"></script>
				<script src="{{ asset('lib/zabuto_calendar.js') }}"></script>

