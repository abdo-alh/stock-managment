{% extends "admin/adminbase.html.twig" %}

{% block title %}{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" type="text/css" href="{{ asset('lib/bootstrap-fileupload/bootstrap-fileupload.css') }}"/>
{% endblock %}

{% block body %}
	<div class="row mt">
		<div class="col-lg-12">
			<div id="edit" class="tab-pane">
				<div class="row">
					<div class="col-lg-3"></div>
					<div class="col-lg-6 detailed centered">
						<div class="centered">
							<div class="profile-pic">
								<p>
									{% if app.user.photo %}
										<img src="{{ asset('uploads/users/' ~ user.photo) }}" class="img-circle">
									{% else %}
										<img src="http://www.placehold.it/200x150/EFEFEF/AAAAAA&text=no+image" class="img-circle">
									{% endif %}
								</p>
								<p>
									<a href="{{ path('reset_password') }}" class="btn btn-theme">
										<i class="fa fa-check"></i>
										تغيير كلمة السر</a>
								</p>
							</div>
						</div>
						<!-- /col-md-4 -->
						<h4 class="mb">Personal Information - معلومات شخصية</h4>
						{{ form_start(formProfile,{ 'attr': {'class': 'form-horizontal'} }) }}
						<div class="form-group">
							<label class="col-lg-4 control-label">
								Avatar - صورة البروفيل</label>
							<div class="col-lg-6">
								{{ form_row(formProfile.photo,{ 'attr': {'class': 'form-control'} }) }}
							</div>
						</div>
						<div class="form-group">
							<label class="col-lg-4 control-label">Username - الإسم</label>
							<div class="col-lg-6">
								{{ form_row(formProfile.username,{ 'attr': {'class': 'form-control','id':'c-name'} }) }}
							</div>
						</div>
						<div class="form-group">
							<label class="col-lg-4 control-label">Email - البريد الإلكتروني</label>
							<div class="col-lg-6">
								{{ form_row(formProfile.email,{ 'attr': {'class': 'form-control','id':'lives-in'} }) }}
							</div>
						</div>
						<div class="form-group">
							<div class="col-lg-10">
								<button class="btn btn-theme" type="submit">حفظ</button>
								<button class="btn btn-theme04" type="button">إلغاء</button>
							</div>
						</div>
						{{ form_end(formProfile) }}
					</div>
					<!-- /col-lg-8 -->
				</div>
				<!-- /row -->
			</div>
			<!-- /tab-pane -->
		</div>
		<!-- /col-lg-12 -->
		<!-- /row -->
	</div>
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<!--script for this page-->
	<script src="{{ asset('lib/jquery-ui-1.9.2.custom.min.js') }}"></script>
	<script type="text/javascript" src="{{ asset('lib/bootstrap-fileupload/bootstrap-fileupload.js') }}"></script>
	<script src="lib/advanced-form-components.js"></script>
{% endblock %}
