{% extends "admin/adminbase.html.twig" %}

{% block title %}{% endblock %}

{% block body %}
	<div class="row mt">
		<div class="col-md-6">
			<div class="content-panel">
				<table class="table table-striped table-advance table-hover">
					<div class="col">
						<h4>
							<i class="fa fa-angle-right"></i>
							Sales Statistics - المداخيل</h4>
					</div>
					<hr>
					<thead>
						<tr>
							<th>
								<i class="fa fa-bullhorn"></i>
								Month - الشهر</th>
							<th>
								<i class="fa fa-question-circle"></i>
								Amount - المبلغ</th>
							<th>
								<i class=" fa fa-edit"></i>
								Products - عدد المنتوجات</th>
						</tr>
					</thead>
					<tbody>
						{% for invoice in months_invoices %}
							<tr>
								<td style="text-align:center">
                                {{ invoice.invoice_month }}</td>
								<td>{{ invoice.amount_invoices|number_format(0, '.') }}
									DH
								</td>
								<td>
									<label class="label label-danger">{{ invoice.count_products }}</label>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
			<!-- /content-panel -->
		</div>
		<!-- /col-md-6 -->
		<div class="col-md-6">
			<div class="content-panel">
				<table class="table table-striped table-advance table-hover">
					<div class="col">
						<h4>
							<i class="fa fa-angle-right"></i>
							Expenses Statistics - المصاريف</h4>
					</div>
					<hr>
					<thead>
						<tr>
							<th>
								<i class="fa fa-bullhorn"></i>
								Month - الشهر</th>
							<th>
								<i class="fa fa-question-circle"></i>
								Amount - المبلغ</th>
							<th>
								<i class=" fa fa-edit"></i>
								Products - عدد المنتوجات</th>
						</tr>
					</thead>
					<tbody>
						{% for purshase in months_purchases %}
							<tr>
								<td style="text-align:center">{{ purshase.purchase_month }}</td>
								<td>{{ purshase.amount_purchases|number_format(0, '.') }}
									DH
								</td>
								<td>
									<label class="label label-danger">{{ purshase.count_products }}</label>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
			<!-- /content-panel -->
		</div>
	</div>
	<!-- /row -->
{% endblock %}
